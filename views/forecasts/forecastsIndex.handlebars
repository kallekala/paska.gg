{{!-- new submittedforecast --}}
<div class="row">
    <form action="/forecasts/submitGuess/{{id}}?_method=PUT" method="post">
        <input type="hidden" name="title"  value="{{title}}">
        <input type="hidden" name="details" value="{{details}}">
        <div class="input-field col s8">
        <input class="materialize-textarea" type="text" name="submittedProbability">
        <label for="title">Guess (0-100 %) for "Yes"</label>
    </div>
<div class="input-field col s2">
    <input type="submit" value="Guess" class="btn waves-effect waves-light">
    </div>
        </form>
        </div>
        <p>Your current guess: {{forecasts.0.submittedProbability}} %</p>
    <div class="card-action center-align">
        <a class="btn grey" href="/forecasts/show/{{id}}">Read More</a>
    </div>



    </div>
    </div>
    </div>

{{/each}}
</div>
<br>

<h4>Your Active Guesses</h4>
<h6>Your guesses on unresolved topics. You can update them as often as you want</h6>

<div class="row">

{{#each submittedForecasts}}
    <div class="col s4 ">
      <div class="card panel">
        <div class="card-content">
        <h5>{{title }}</h5>
        <p>{{details }}</p>
   <p>Your probability for "Yes": {{submittedProbability}} %</p>
    </div>
    </div>
    </div>

    {{else}}
<p>No guesses active</p>

{{/each}}
</div>


{{!-- RESOLVED --}}
<h4>Finished Topics and Your Results</h4>
<h6>Topics that have been resolved</h6>

<div class="row">
{{#each resolved}}
    <div class="col s4 ">
      <div class="card panel">
        <div class="card-content">
        <h5>{{title }}</h5>
        <p>{{details}}</p>
        <p>Your probability for "yes": {{submittedProbability}} %</p>
        <p>Final Result: {{result}}</p>        
        <p>Your Brier Score (0=best 2=worst): {{brierScore}}</p>
    </div>
    </div>

    </div>
{{else}}
<p>No Forecasts Finished</p>

{{/each}}
</div>
